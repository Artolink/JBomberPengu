<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.settings.SettingsMenuController">
   <children>
      <Label fx:id="pageLabel" text="Settings" textAlignment="CENTER" />
      <VBox alignment="CENTER" spacing="20.0">
      	<children>
      		<ComboBox fx:id="languageChoiceBox" onAction="#languageChoiceBoxPressed" prefWidth="150.0" />
            <CheckBox fx:id="fullscreenCB" disable="true" onAction="#fullscreenPressed" mnemonicParsing="false" text="Fullscreen" />
      	</children>
         <opaqueInsets>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backButton" text="Back" />
        </buttons>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </ButtonBar>
   </children>
   <padding>
      <Insets top="30.0" />
   </padding>
</VBox>
