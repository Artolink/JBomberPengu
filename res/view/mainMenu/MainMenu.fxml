<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" stylesheets="view/mainMenuStyle.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.mainMenu.MainMenuController">
   <children>
       <ImageView fitHeight="100.0" fitWidth="800.0">
	       <image>
	           <Image url="@view/logo.png"/>
	       </image>
       </ImageView>
       <HBox alignment="CENTER">
       <children>
       <VBox alignment="CENTER">
          <ImageView fitHeight="250.0" fitWidth="250.0">
                <image>
                    <Image url="@view/penguin.png" />
                </image>
          </ImageView>
       </VBox>
       <VBox alignment="CENTER" spacing="10.0">
          <children>
             <Label text="A Glacial War">
	             <font>
		             <Font size="26.0" />
		          </font>
		          <padding>
		              <Insets bottom="50.0"></Insets>
		          </padding>
             </Label>
             <Button fx:id="spBtn" disable="true" mnemonicParsing="false" onAction="#singlePlayerBtPressed" text="Singleplayer" />
             <Button fx:id="mpBtn" mnemonicParsing="false" onAction="#multiPlayerBtPressed" text="Multiplayer" />
             <Button mnemonicParsing="false" onAction="#mapEditorPressed" text="Map editor" />
             <Button mnemonicParsing="false" onAction="#languageEditorPressed" text="Language editor" />
             <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#settingsBtPressed" text="Settings" />
             <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeGame" text="Exit" />
          </children>
          <padding>
             <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
          </padding>
       </VBox>
       </children>
       </HBox>
   </children>
   <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
