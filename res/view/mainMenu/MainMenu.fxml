<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.mainMenu.MainMenuController">
   <children>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="450.0" minWidth="400.0" spacing="20.0" style="-fx-background-color: DARKCYAN;">
         <children>
            <Label text="jbomberpengu">
               <font>
                  <Font name="System Bold Italic" size="36.0" />
               </font>
            </Label>
            <Button fx:id="spBtn" disable="false" mnemonicParsing="false" onAction="#singlePlayerBtPressed" text="Singleplayer" />
            <Button fx:id="mpBtn" mnemonicParsing="false" onAction="#multiPlayerBtPressed" text="Multiplayer" />
            <Button mnemonicParsing="false" text="MapEditor" onAction="#mapEditorPressed" />
            <Button mnemonicParsing="false" text="LanguageEditor" onAction="#languageEditorPressed" />
            <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#settingsBtPressed" text="Settings" />
            <ComboBox fx:id="languageChoiceBox" onAction="#languageChoiceBoxPressed" prefWidth="150.0" />
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeGame" text="Exit" />
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
