<VBox alignment="TOP_CENTER" stylesheets="view/game/GameStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.game.GameEndedController">
   <children>
       <ImageView fitHeight="100.0" fitWidth="800.0">
	       <image>
	           <Image url="@view/logo.png" />
	       </image>
       </ImageView>
       <HBox alignment="CENTER">
       <children>
       <VBox alignment="CENTER">
          <children>
             <ImageView fitHeight="250.0" fitWidth="250.0">
                   <image>
                       <Image url="@view/penguin.png" />
                   </image>
             </ImageView>
          </children>
       </VBox>
       <VBox alignment="CENTER" spacing="10.0">
          <children>
             <Label fx:id="statusLabel" prefHeight="42.0" prefWidth="141.0" text="you win/lost">
	             <font>
		             <Font size="26.0" />
		          </font>
		          <padding>
		              <Insets bottom="50.0" />
		          </padding>
             </Label>
             <Button fx:id="mpBtn" mnemonicParsing="false" onAction="#multiPlayerBtPressed" text="Play again" />
             <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtPressed" text="Return to main menu" />
          </children>
          <padding>
             <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
          </padding>
       </VBox>
       </children>
       </HBox>
   </children>
   <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
